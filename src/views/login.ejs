<!DOCTYPE html>
<html>
<head>
    <title>Login - Toto</title>

    <script type="text/javascript" src="/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="/libs/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/login.js"></script>

    <link rel="stylesheet" href="/libs/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/libs/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="page-content">
        <div class="container-login">
            <div>
                <table class="table-login-header">
                    <tbody>
                        <tr>
                            <td>
                                <!--<img class="login-logo-img" src="/images/logo-128px.png"/>-->
                            </td>
                            <td>
                                <h2 class="login-title ml-2">Toto</h2>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="container-login-form mt-2">
                <form>
                    <%- include('partials/alerts.ejs'); %>

                    <div class="form-group form-group-login mt-4">
                        <label class="label-login" for="password-input">Password</label> 
                        <input type="password" class="form-control" id="password-input" placeholder="" maxlength="120">
                        <div id="password-invalid-feedback" class="invalid-feedback">
                            Please enter your password
                        </div>
                    </div>
                    <div class="form-group">
                        <button id="login-button" type="button" class="btn btn-info btn-login mt-4"
                            onclick="loginOnClick()">Log in</button>
                    </div>
                </form>
            </div>
            <div class="mt-4">
                <a class="back-to-home" href="/"><span>
                    <i class="fa fa-long-arrow-left"></i> Back to home</span></a>
            </div>
        </div>
    </div>
</body>
</html>